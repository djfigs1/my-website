---
import Fox from "../assets/img/Fox.png";
import { Image } from "astro:assets";
import Group from "../layouts/Group.astro";
---

<footer>
  <Group alignItems="center">
    Hecho con amor
    <Image
      src={Fox}
      alt="The best animal in the world: the fox."
      width={64}
      height={64}
    />
  </Group>
</footer>
<style>
  footer {
    display: flex;
    justify-content: center;
    padding-top: 2rem;
    padding-bottom: 2rem;
    background-color: var(--dark-background);
    min-width: 100%;
    border-top: 0.1rem;
    border-left: 0;
    border-right: 0;
    border-bottom: 0;
    border-style: solid;
    border-color: var(--primary);
  }
</style>
