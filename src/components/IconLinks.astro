---
import Icons from "@mdi/js";
import MDIcon from "./MDIcon.astro";
import Group from "../layouts/Group.astro";

type Props = {
  links: IconLink[];
  scale?: number;
};

export type IconLink = {
  url: string;
  icon: keyof typeof Icons;
};

const { scale, links } = Astro.props;
---

<Group noCollapse direction="row" justifyContent="center" alignItems="center" gap={2}>
  {
    links.map((l) => (
      <a target="_blank" rel="noopener noreferrer" href={l.url}>
        <MDIcon name={l.icon} scale={scale} fill="#e6611a" />
      </a>
    ))
  }
</Group>
<style>
  a {
    transition: border-color 0.5s;
    border: 0;
    border-bottom: 0.1rem solid;
    border-color: transparent;
    padding-bottom: -0.1rem;
  }

  a:hover {
    transition: border-color 0.1s;
    border-color: var(--secondary);
  }
</style>