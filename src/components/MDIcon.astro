---
import Icons from "@mdi/js";

export type MDIconType  = keyof typeof Icons;

type Props = {
  name: MDIconType;
  scale?: number,
  fill?: string
};

const {name, scale, fill} = Astro.props;
const d = Icons[name];
const ScaledSize = 24 * (scale ?? 1);
---

<svg width=`${ScaledSize}px` height=`${ScaledSize}px`>
    <path d={d} fill={fill ?? "#ffffff"} transform=`scale(${scale})`/>
</svg>